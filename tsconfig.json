{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "baseUrl": "./src"
  },
  "include": ["src/**/*", "types/mongoose-slug-updater.d.ts"],
  "exclude": ["node_modules", "dist"]
}
